<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.stuffinder.activities.ModifierProfileBisActivity"
    android:background="#ff24088f">



    <Button
        style="@android:style/ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier"
        android:id="@+id/buttonCreer"
        android:background="#ff5e6eff"
        android:textColor="#ffffffff"
        android:onClick="modifierNom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier Profils"
        android:id="@+id/textViewInfo"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom"
        android:id="@+id/textViewNom"
        android:textColor="#ffffffff"
        android:textSize="18dp"
        android:layout_below="@+id/textViewInfo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNomVue"
        android:textSize="18dp"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/textViewNom"
        android:layout_toEndOf="@+id/textViewInfo" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPrenomVue"
        android:textSize="18dp"
        android:textColor="#ffffffff"
        android:layout_toEndOf="@+id/textViewInfo"
        android:layout_below="@+id/textViewNom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewIdVue"
        android:textSize="18dp"
        android:textColor="#ffffffff"
        android:layout_toEndOf="@+id/textViewInfo"
        android:layout_below="@+id/textViewNom" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextModofierNom"
        android:background="#ff5e6eff"
        android:layout_alignTop="@+id/textViewNomVue"
        android:layout_alignStart="@+id/buttonCreer" />


    <Button
        style="@android:style/MediaButton.Previous"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Retour"
        android:id="@+id/buttonRetour"
        android:background="#ff24088f"
        android:textColor="#ffffffff"
        android:textSize="10dp"
        android:onClick="retour"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textViewNom" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/listView"
        android:layout_alignParentStart="false"
        android:layout_alignEnd="@+id/editTextModofierNom"
        android:layout_below="@+id/textViewPrenomVue"
        android:layout_above="@+id/buttonCreer" />


</RelativeLayout>
