<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.stuffinder.activities.CreerProfilActivity"
    android:background="#ff24088f">




    <Button
        style="@android:style/ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Créer"
        android:id="@+id/buttonCreerProfil"
        android:background="#ff5e6eff"
        android:textColor="#ffffffff"
        android:onClick="creerProfil"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Créer Profils"
        android:id="@+id/textViewInfo"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom"
        android:id="@+id/textViewNom"
        android:textColor="#ffffffff"
        android:textSize="18dp"
        android:layout_below="@+id/textViewInfo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNomVue"
        android:textSize="18dp"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/textViewNom"
        android:layout_toEndOf="@+id/textViewInfo" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPrenomVue"
        android:textSize="18dp"
        android:textColor="#ffffffff"
        android:layout_toEndOf="@+id/textViewInfo"
        android:layout_below="@+id/textViewNom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNomProfil"
        android:textSize="18dp"
        android:textColor="#ffffffff"
        android:layout_toEndOf="@+id/textViewInfo"
        android:layout_below="@+id/textViewNom" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editTextNomProf"
        android:background="#ff5e6eff"
        android:layout_alignTop="@+id/textViewNomVue"
        android:layout_alignStart="@+id/buttonCreer" />


    <Button
        style="@android:style/MediaButton.Previous"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Retour"
        android:id="@+id/buttonRetour"
        android:background="#ff24088f"
        android:textColor="#ffffffff"
        android:textSize="10dp"
        android:onClick="retour5"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textViewNom" />

    <ListView
        android:id="@+id/listCreerProf"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:choiceMode="multipleChoice"
        android:layout_below="@+id/textViewPrenomVue"
        android:layout_above="@+id/buttonCreer">
    </ListView>


</RelativeLayout>
