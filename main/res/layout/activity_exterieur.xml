<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.stuffinder.activities.ExterieurActivity"
    android:background="#ff24088f">


    <ListView
        android:id="@+id/listExt"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:choiceMode="singleChoice"
        android:layout_below="@+id/button5"
        android:layout_alignParentStart="true">
    </ListView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vos Profils Extérieurs"
        android:id="@+id/textView12"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="@android:style/MediaButton.Previous"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:text="Retour"
        android:id="@+id/button5"
        android:background="#ff24088f"
        android:textColor="#ffffffff"
        android:textSize="10dp"
        android:onClick="retour"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textView12" />

    <Button
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:text="Activer"
        android:id="@+id/button6"
        android:background="#ff5e6eff"
        android:clickable="true"
        android:elegantTextHeight="false"
        android:textColor="#ffffffff"
        android:textStyle="normal"
        android:textSize="18sp"
        android:ellipsize="end"
        android:onClick="onEnableSurveillance"
        android:layout_alignBottom="@+id/button7"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="25dp" />

    <Button
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:text="Désactiver"
        android:id="@+id/button7"
        android:background="#ff5e6eff"
        android:clickable="true"
        android:elegantTextHeight="false"
        android:textColor="#ffffffff"
        android:textStyle="normal"
        android:textSize="18sp"
        android:ellipsize="end"
        android:onClick="onDisableSurveillance"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/listExt"
        android:layout_alignEnd="@+id/listExt"
        android:layout_marginRight="25dp" />

</RelativeLayout>
