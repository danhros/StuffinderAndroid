<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.stuffinder.activities.LocalisationActivity"
    android:background="#ff24088f">

    <Button
        style="@android:style/MediaButton.Previous"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:text="Retour"
        android:id="@+id/button2"
        android:background="#ff24088f"
        android:textColor="#ffffffff"
        android:textSize="10dp"
        android:onClick="retour9"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPosition"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNomObj"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:layout_above="@+id/textViewPosition"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="LED"
        android:id="@+id/buttonLed"
        android:background="#ff5e6eff"
        android:clickable="true"
        android:elegantTextHeight="false"
        android:textColor="#ffffffff"
        android:textStyle="normal"
        android:textSize="18dp"
        android:ellipsize="end"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="80dp"
        android:layout_alignEnd="@+id/button2"
        android:onClick="onLed" />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Son"
        android:id="@+id/buttonSon"
        android:background="#ff5e6eff"
        android:clickable="true"
        android:elegantTextHeight="false"
        android:textColor="#ffffffff"
        android:textStyle="normal"
        android:textSize="18dp"
        android:ellipsize="end"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/buttonLed"
        android:onClick="onSon" />

    <Button
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:text="Retenter"
        android:id="@+id/buttonRetenter"
        android:background="#ff5e6eff"
        android:clickable="true"
        android:elegantTextHeight="false"
        android:textColor="#ffffffff"
        android:textStyle="normal"
        android:textSize="18dp"
        android:ellipsize="end"
        android:layout_alignTop="@+id/buttonSon"
        android:layout_alignParentEnd="true"
        android:onClick="retenter" />

</RelativeLayout>
