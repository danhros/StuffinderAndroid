<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.stuffinder.activities.ModifierProfileActivity"
    android:background="#ff3309e4">

    <Button
        style="@android:style/MediaButton.Previous"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:text="Retour"
        android:id="@+id/buttonRetour"
        android:background="#ff3309e4"
        android:textColor="#ffffffff"
        android:textSize="10dp"
        android:onClick="retour"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView"
        android:layout_alignBottom="@+id/textView" />

        <ListView
            android:id="@+id/listModProf"
            android:layout_width="fill_parent"
            android:layout_height="400dp"
            android:choiceMode="singleChoice"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/buttonRetour">
        </ListView>

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Modifier"
        android:id="@+id/button3"
        android:background="#ff5e6eff"
        android:clickable="true"
        android:elegantTextHeight="false"
        android:textColor="#ffffffff"
        android:textStyle="normal"
        android:textSize="18dp"
        android:ellipsize="end"
        android:onClick="goToModoficiation"
        android:layout_below="@+id/listModProf"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
